

<section class="container">
	<%= form_for :admin, :url => {:action => 'attempt_login'}, :html => {:class => "form-horizontal"} do |t| %>

		  <div class="form-group">
		    <%= t.label :username, :class => "col-sm-2 control-label" %>
		    <div class="col-sm-3">
		    <%= t.text_field :username, :class => 'form-control' %>
		    </div>
		  </div>

		  <div class="form-group">
		    <%= t.label :password, :class => "col-sm-2 control-label" %>
		    <div class="col-sm-3">
		    <%= t.password_field :password, :class => 'form-control' %>
		    </div>
		  </div>

		  <div class="form-group">
		    <div class="col-sm-offset-2 col-md-12">
		      <%= submit_tag("Login", :class => "btn btn-primary") %>
		    </div>
		  </div>
	<% end %>
</section>
