<table id="projects" class="table table-bordered">
  <thead>
    <tr>
    	<th>Name</th>
    	<th>Description</th>
    	<th>Started</th>
    	<th>Estimated to End</th>
    	<th>Status</th>	
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
    	<td><%= project.project_name %></td>
    	<td><%= project.project_description %></td>
    	<td><%= project.project_started %></td>
    	<td><%= project.project_estimated_to_end %></td>
    	<td><%= project.project_status %></td>
      <td>
        <%= link_to("Edit", {:action => 'edit', :id => project.id }, :class => 'btn btn-primary btn-xs') %>
        <%= link_to("Delete", {:action => 'delete', :id => project.id }, :class => 'btn btn-danger btn-xs') %>

      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to("Add New Project", {:action => 'new', :id => @customer_id}, :class => 'btn btn-primary') %>